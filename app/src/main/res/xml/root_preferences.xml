<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Countries">
        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/country_entries"
            app:entryValues="@array/country_values"
            app:key="reply"
            app:title="@string/country_selection"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Categories">
        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/category_entries"
            app:entryValues="@array/category_values"
            app:key="category"
            app:title="@string/category_selection"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>